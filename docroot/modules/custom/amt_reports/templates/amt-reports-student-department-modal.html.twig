<!-- Modal for Updating Multiple students' departments -->
<div class="modal" tabindex="-1" role="dialog" id="update_mass_student_department">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h3>Mass Student Department Update</h3>
            </div>
            <div class="modal-body">
              <h3>Departments List</h3>
              <form method="post" action="/amt_reports/mass_student_department_update" id="mass_student_department_update_form">
                <div class="row">
                  <div class="form-group col-md-10">
                    <select class="form-control" id="student_department_select_list_element" name="department">
                    {% if departments %}
                        <option value="">None</option>
                        {% for dep_id, department in departments %}
                            <option value="{{ dep_id }}">{{ department }}</option>
                        {% endfor %}
                    {% endif %}
                    </select>
                  </div>
                  <input type="text" name="students" style="display:none">
                  <input type="text" name="redirection_path" style="display:none">
                  <div class="col-md-2">
                    <button type="submit" class="btn btn-success btn-block" id="">Update All</button>
                  </div>
                </div>
              </form>
              <hr>
              <h3>Students List</h3>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>
                      <div class="checkbox">
                        <label>
                          <input type="checkbox" id="mass_student_department_checkbox_all"> select All
                        </label>
                      </div>
                    </th>
                    <th>ID</th>
                    <th>Student Name</th>
                    <th>Student Department</th>
                  </tr>
                </thead>
                <tbody id="update_mass_student_department_table_body">
                {% if events %}
                  {% for getdata in events %}
                    <tr>
                      <td>
                        <div class="checkbox">
                          <label>
                            <input type="checkbox" class="student_checkbox_student_department_update" data-id="{{getdata.stac_id}}">
                          </label>
                        </div>
                      </td>
                      <td>{{getdata.link}}</td>
                      <td>{{getdata.student}}</td>
                      <td>{{getdata.department}}</td>
                    </tr>
                  {% endfor %}
                {% endif %}
                </tbody>
              </table>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- End of modal for Updating Multiple appointments statuses -->